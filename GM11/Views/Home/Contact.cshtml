@model GM011.Models.Costumer
@{
    ViewData["Title"] = "Contact";
}

<h3>@ViewData["Message"]</h3>


<section>
    @using (Html.BeginForm("SendEmailAsync", "Home"))
    {
        <div class="row ">

            <h4 class="rowPadding col-md-offset-2"> We will contact you within 24 hours</h4> @*--der mangler noget styling--*@

            <div class="col-md-6 col-md-offset-2">
                <div class="form-group">
                    <label class="label"> Name</label>
                    <input name="subject" id="" class="form-control" type="text" />
                </div>
            </div>
            <div class="col-md-6  col-md-offset-2">
                <div class="form-group">
                    <label class="label"> Email </label>
                    <input name="email" id="" class="form-control" type="text" />
                </div>
            </div>
            <div class="col-md-6  col-md-offset-2">
                <div class="form-group">
                    <label class="label"> Message </label>
                    <textarea name="message" id="" class="form-control" type="text"></textarea>
                </div>
            </div>
            <div class="col-md-6  col-md-offset-2">
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary">Send Message</button>
                </div>
            </div>



        </div>
    }

    <row class="rowPadding row">
        <div class="col-lg-12 push100"></div>
        <div class="col-lg-12 push200"></div>
        <div class="col-lg-12 "></div>
    </row>

</section>
