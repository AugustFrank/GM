@model GM11.Models.GMViewModels.CarIndexData

@{
    ViewData["Title"] = "Home Page";
}

@*Her Kommer Der Landing Page med Formular for valg af dato*@
@* Landing skal fylle 100%*@
<header>
    <div class="container-fluid HeaderPic">
        <div class="slider-container">
            <div class="intro-text">
                <div class="intro-lead-in">Welcome to Green Mile</div>
                <div class="intro-heading">We are not ready yet!</div>
            </div>
            @*start of from*@
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <div class="col-md-3">
                        <div class="form-group">
                            <label> Pick Up Date</label>
                            <input id="start_datepicker" class="form-control" type="datetime-local" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label> Return Date</label>
                            <input id="end_datepicker" class="form-control" type="datetime-local" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label> Pick Up location </label>
                            <select class="form-control" type="datetime-local">
                                <option>Reykjavik</option>
                                <option>Keflavik</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label> Pick Up return location</label>
                            <select class="form-control" type="datetime-local">
                                <option>Reykjavik</option>
                                <option>Keflavik</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </div>

        </div>
    </div>
</header>
@*Her Kommer der Information Om Biler og service*@
<section>
    <div class="row">
        <div class="sectionProducts col-md-8 col-md-offset-2 wrapperShadow">
            <div class="row ">
                <div class="col-lg-12">
                    <header class="page-header ProductSection">
                        <h2 class="ProductSection sectionTitle">
                            Vehicles
                        </h2>
                    </header>

                </div>
            </div>
            <div class="row rowPadding">

                @foreach (var item in Model.Cars)
            {
                    <div class="col-lg-4">

                        <img src="~/images/@Html.DisplayFor(Model=>item.CarType.ImagePath)" width="100%" />
                        <div class="caption">
                            <p class="productTitle">@Html.DisplayFor(Model => item.FuelPerKM) Liters Per 100 Km</p>
                            <p class="productDescription"> Example of this range: @Html.DisplayFor(ModelItem => item.CarType.Make)  @Html.DisplayFor(Model => item.CarType.Model) </p> <!-- Needs to be implemented in DB! -->
                            <ul class="list-inline productMeta">
                                <li>
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>

                                    <span class="text-uppercase">@Html.DisplayFor(Model => item.Seats)</span>
                                </li>

                                <li>
                                    <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>

                                    <span class="text-uppercase">@Html.DisplayFor(Model => item.Seats)</span> <!-- Baggage Needs DB Fix! -->
                                </li>

                                <li>
                                    <span class="glyphicon glyphicon-modal-window" aria-hidden="true"></span>

                                    <span class="text-uppercase">@Html.DisplayFor(Model => item.Year)</span>
                                </li>

                                <li>
                                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>

                                    <span class="text-uppercase">
                                        @Html.DisplayFor(Model => item.Transmission)
                                    </span> <!-- Gears Needs DB Fix! (A - M) Instead of (Sentences) -->
                                </li>
                            </ul>
                        </div>
                    </div>

                }
            </div>
        </div>

